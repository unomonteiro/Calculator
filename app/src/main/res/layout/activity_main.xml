<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey600"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_display"
        android:cursorVisible="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey600"
        android:text="0"

        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_ac"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey300"
            android:onClick="btClearClick"
            android:text="ac"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_invert"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey300"
            android:onClick="btClick"
            android:text="+/-"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_percent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey300"
            android:onClick="btPercentClick"
            android:text="%"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_div"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/orange400"
            android:onClick="btOpClick"
            android:text="/"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="7"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="8"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="9"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_multiply"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/orange400"
            android:onClick="btOpClick"
            android:text="X"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/orange400"
            android:onClick="btOpClick"
            android:text="-"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/grey200"
            android:onClick="btClick"
            android:text="3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_sum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="0.5dp"
            android:background="@color/orange400"
            android:onClick="btOpClick"
            android:text="+"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="0.5dp"
                android:paddingEnd="15dp"
                android:background="@color/grey200"
                android:onClick="btClick"
                android:text="0"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_dot"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="0.5dp"
                android:background="@color/grey200"
                android:onClick="btClick"
                android:text="."
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_equal"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="0.5dp"
                android:background="@color/orange400"
                android:onClick="btEqualClick"
                android:text="="
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>